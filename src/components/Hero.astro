---
import { siteConfig } from "../config";
import StarryBackground from "./StarryBackground.astro";
---

<div id="hero" class="relative min-h-screen flex flex-col items-center justify-center text-center overflow-hidden bg-ai-bg">
    <!-- Starry Night Background -->
    <StarryBackground />
    
    <!-- Content Overlay -->
    <div class="relative z-10 container mx-auto px-6 flex flex-col items-center justify-center h-full">
        
        <!-- Main Headline -->
        <!-- Main Headline -->
        <h1 class="text-3xl sm:text-4xl md:text-6xl lg:text-7xl leading-tight font-serif text-white mb-8 max-w-4xl mx-auto animate-fade-in opacity-0" style="font-family: 'Playfair Display', serif;">
            Architecting <span class="italic text-ai-primary">intelligent</span> digital experiences for the future.
        </h1>

        <!-- Subheadline / Badge -->
        <div class="flex flex-col sm:flex-row items-center gap-4 text-ai-text-muted text-sm sm:text-base md:text-lg mb-12 animate-fade-in animation-delay-200 opacity-0 font-light">
            <span>Hello, I'm <strong class="text-white">{siteConfig.name}</strong></span>
            <div class="hidden sm:block w-1.5 h-1.5 bg-ai-text-muted rounded-full"></div>
            <div class="px-3 py-1 rounded-full bg-ai-primary/10 border border-ai-primary/30 text-ai-primary text-xs font-mono uppercase tracking-wider flex items-center gap-2">
                <span class="w-1.5 h-1.5 bg-ai-primary rounded-full animate-pulse"></span>
                AI Developer
            </div>
        </div>

        <!-- CTA Button -->
        <a href="mailto:ansarinoman1321@gmail.com" class="group relative px-8 py-4 bg-gradient-to-r from-[#7000ff] to-[#00f3ff] rounded-full text-white font-bold text-lg tracking-wide shadow-[0_0_30px_rgba(112,0,255,0.4)] hover:shadow-[0_0_50px_rgba(0,243,255,0.6)] transition-all duration-300 transform hover:-translate-y-1 animate-fade-in animation-delay-400 opacity-0 flex items-center gap-2">
            Let's Connect
            <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 group-hover:translate-x-1 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
            </svg>
        </a>

        <!-- Contact Info / Socials (Small below button) -->
         <div class="mt-8 flex flex-col items-center gap-4 animate-fade-in animation-delay-600 opacity-0">
             <a href={`mailto:${siteConfig.social.email}`} class="text-ai-text-muted hover:text-white transition-colors text-sm font-mono flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                {siteConfig.social.email}
             </a>
             <div class="flex gap-6">
                {siteConfig.social.linkedin && (
                    <a href={siteConfig.social.linkedin} target="_blank" class="text-ai-text-muted hover:text-ai-primary transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path><rect x="2" y="9" width="4" height="12"></rect><circle cx="4" cy="4" r="2"></circle></svg>
                    </a>
                )}
                {siteConfig.social.github && (
                    <a href={siteConfig.social.github} target="_blank" class="text-ai-text-muted hover:text-ai-primary transition-colors">
                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
                    </a>
                )}
             </div>
         </div>
    </div>
    
    <!-- Import Playfair Display Font locally for this component or verify its in global.css (it's likely not, so I will add a link here to be safe) -->
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:ital,wght@0,400;0,700;1,400&display=swap" rel="stylesheet">
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 1s ease-out forwards;
  }

  .animation-delay-200 { animation-delay: 0.2s; }
  .animation-delay-400 { animation-delay: 0.4s; }
  .animation-delay-600 { animation-delay: 0.6s; }
</style>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.8s ease-out forwards;
    opacity: 0;
  }

  .animation-delay-200 {
    animation-delay: 0.2s;
  }

  .animation-delay-400 {
    animation-delay: 0.4s;
  }

  .animation-delay-600 {
    animation-delay: 0.6s;
  }
</style>
